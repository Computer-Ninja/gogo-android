<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="tattoo.gogo.app.gogo_android.ArtistTattooFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="tattoo.gogo.app.gogo_android.ArtistTattooFragment"
        tools:listitem="@layout/fragment_tattoo"/>

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/progress_animation"/>
    <TextView
        android:id="@+id/tv_nothing_here_yet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nothing_here_yet"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"/>
</RelativeLayout>