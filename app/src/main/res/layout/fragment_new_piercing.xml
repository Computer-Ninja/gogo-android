<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/nsv_scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize">


        <include layout="@layout/partial_artist_title"/>

        <include layout="@layout/partial_future_link"/>

        <include layout="@layout/partial_where_when"/>

        <include layout="@layout/partial_gender"/>

        <include layout="@layout/partial_tags"/>

        <include layout="@layout/partial_body_parts"/>

        <include layout="@layout/partial_images"/>

        <include layout="@layout/partial_qr_codes"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>